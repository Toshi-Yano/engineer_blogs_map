.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = @blog
      -# - @blog.each do |blog|
        -# = blog.body
      = link_to "ログアウト",destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_with(model: @user, local: true) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :introduction
          .field-input
            = f.text_area :introduction
        .field
          .field-label
            = f.label :myblog
          .field-input
            = f.text_field :myblog
        - if current_user.myblog
          .field
            .field-label
              = f.label :Myblog_name
              = f.collection_select :blog_id, Blog.all, :id, :title
        .actions
          = f.submit "Update", class: 'btn'
