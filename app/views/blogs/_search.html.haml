.search__left
  = search_form_for(@q, url:search_show_blogs_path) do |f|
    .search__left__form
      .search__left__form--label
        = f.label :title_cont_all, "タイトル"
      .search__left__form--field
        = f.search_field :title_cont_all, class: "search__left__form--field"
    .search__left__form
      .search__left__form--label
        = f.label :body_cont_all, "紹介文"
      .search__left__form--field
        = f.search_field :body_cont_all, class: "search__left__form--field"
    .search__left__form
      .search__left__form--label
        = f.label :tags_id_in, "タグ"
      .search__left__form--tag
        = f.collection_check_boxes :tags_id_in, @tags, :id, :name
    .search__left__sort
      = f.select(:sorts, {"登録が古い順": "created_at asc", "登録が新しい順": "created_at desc"}, {selected: params[:q][:sorts]}, class: "search__left__sort--tab")
    .search__left__action
      = f.submit "検索", class: "search__left__action--btn"