= render "header"
.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト",destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_with(model: @blog, local: true) do |f|
        .field
          .field-label
            = f.label :name, "TITLE"
          .field-input
            = f.text_field :title
        .field
          .field-label
            = f.label :name, "URL"
          .field-input
            = f.url_field :url
        .field
          .field-label
            = f.label :紹介文
          .field-input
            = f.text_area :body
        .field
          .field-label
            = f.label :category
            = f.collection_select :category_id, Category.all, :id, :name
        .field
          .field__search--label
            %label.field__search--label--text タグを追加（クリックで選択）
          .field__search--form
            %input.field__search--form--input#search-form{autocomplete: "off"}
          #search-result
        .field
          .field__include--label
            %label.field__include--label--text 選択済（クリックで削除）
          .field__include--form
            #include-tag
        = render "tags/form"
        - if current_user.myblog == @blog.url
          .field-labal
            = f.hidden_field :owner_id, value: current_user.id
        .actions
          = f.submit "Update", class: 'btn'