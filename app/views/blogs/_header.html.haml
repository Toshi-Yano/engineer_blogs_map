%header
  .header__title
    = link_to "Engineer.Blogs.map!",root_path
  .header__contents
    -if user_signed_in?
      = link_to "#", class: "header__contents__items" do
        ABOUT
      = link_to "#", class: "header__contents__items" do
        SEARCH
      = link_to "#", class: "header__contents__items" do
        POST
      = link_to "MY PAGE", user_path(current_user), class: "header__contents__items"
      = link_to "LOG OUT", destroy_user_session_path, method: :delete, class: "header__contents__items"
    - else
      = link_to "#", class: "header__contents__items" do
        ABOUT
      = link_to "#", class: "header__contents__items" do
        SEARCH
      = link_to "#", class: "header__contents__items" do
        POST
      = link_to "LOG IN", new_user_session_path, class: "header__contents__items"
      = link_to "SIGN UP", new_user_registration_path, class: "header__contents__items"