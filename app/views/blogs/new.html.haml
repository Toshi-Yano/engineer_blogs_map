= render "header"
.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト",destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_with(model: @blog, local: true) do |f|
        .field
          .field-label
            = f.label :name, "TITLE"
          .field-input
            = f.text_field :title
        .field
          .field-label
            = f.label :name, "URL"
          .field-input
            = f.url_field :url
        .field
          .field-label
            = f.label :紹介文
          .field-input
            = f.text_area :body
        .field
          .field-label
            = f.label :category
            = f.collection_select :category_id, Category.all, :id, :name
        .field
          .field__search--label
            %label.field__search--label--text{:for => "chat_group_タグを追加"} タグを追加
          .field__search--form
            %input.field__search--form--input#search-form{:type => "text"}
          #search-result
        .field
          .field__include--label
            %label.field__include--label--text{:for => "chat_group_タグ"} タグ
          .field__include--form
            #include-tag
        = render "tags/form"
        -# .field
        -#   .field-label
        -#     = f.label :tag
        -#     = f.collection_check_boxes :tag_ids, Tag.all, :id, :name
        .actions
          = f.submit "Update", class: 'btn'