= render "blogs/header"
.account-page
  .account-page__inner.clearfix
    .account-page__inner--right.user-form
      .account-page__title
        %p.account-page__title--text
          レビュー編集
      = form_with(model: [@blog, @review], local: true) do |f|
        .field
          .field-label
            = f.label :おすすめ記事（任意）
          .field-input
            = f.url_field :article_url, placeholder: "記事URL"
        .field
          .field-label
            = f.label :記事タイトル（任意）
          .field-input
            = f.text_field :article_title, placeholder: "記事タイトル（最大100文字）"
        .field
          .field-label
            = f.label :レビュー（必須）
          .field-input
            = f.text_area :body, placeholder: "レビュー本文（最大200文字）"
        .actions
          = f.submit "登録", class: 'btn'