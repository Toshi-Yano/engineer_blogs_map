= render "blogs/header"
.user
  .user__profile
    %p.user__profile__name
      = "#{@user.name}さんのプロフィール"
    %p.user__profile__intro
      = simple_format @user.introduction
    %p.user__profile__myblog
      - if @user.blog_id.present?
        = @blog.title
      - else
        My Blogはありません
    = link_to "プロフィールを編集", edit_user_path(current_user), class: "user__profile__edit"
  .user__container
    .user__container__blogs
      %ul.user__container__blogs__person
        個人ブログ
        - @blogs.each do |blog|
          %li.user__container__blogs__person--title
            = link_to blog.title, blog.url
          %li.user__container__blogs__person--tag
            - blog.tags.each do |tag|
              %p.user__container__blogs__person--tag--each
                = tag.name
          %li.main__index__list--function
            = render partial: "like_blogs/index", locals: { blog: blog }
            %p.main__index__list--function--details
              = link_to "詳細", blog_path(blog.id)
      %ul.user__container__blogs__person
        企業ブログ
        - @blogs.each do |blog|
          %li.user__container__blogs__person--title
            = link_to blog.title, blog.url
          %li.user__container__blogs__person--tag
            - blog.tags.each do |tag|
              %p.user__container__blogs__person--tag--each
                = tag.name
          %li.main__index__list--function
            = render partial: "like_blogs/index", locals: { blog: blog }
            %p.main__index__list--function--details
              = link_to "詳細", blog_path(blog.id)
