.account-page
  .account-page__inner.clearfix
    .account-page__inner--right.user-form
      .account-page__title
        %p.account-page__title--text
          プロフィール編集
      = render "layouts/error_user"
      = form_with(model: @user, local: true) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, placeholder: "最大16文字", autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :introduction
          .field-input
            = f.text_area :introduction, placeholder: "最大200文字"
        .actions
          = f.submit "登録", class: 'btn'