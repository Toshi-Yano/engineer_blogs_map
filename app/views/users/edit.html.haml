.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト",destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_with(model: @user, local: true) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :introduction
          .field-input
            = f.text_area :introduction
        .field
          .field-label
            = f.label :myblog
          .field-input
            = f.text_field :myblog
        -# .field
        -#   .field-input
        -#     = f.text_field :blog_id, value: @blog.id
        = f.fields_for :blog, @blog do |b|
          = b.text_field :id
          -# = b.collection_check_boxes :owner_id, User.all, :id, :id
          = b.text_field :owner_id, value: @user.id
        .actions
          = f.submit "Update", class: 'btn'
