= render "header"
.search
  = render "search"
  .search__right
    .search__right__index
      - @blogs.each do |blog|
        .search__right__index--each
          .search__right__index--each__title
            = link_to blog.title, blog_path(blog.id)
          .search__right__index--each__tags
            - blog.tags.each do |tag|
              %span= tag.name
          .search__right__index--each__body
            %span= blog.body
          .search__right__index--each__like
            = render partial: "like_blogs/index", locals: { blog: blog }
