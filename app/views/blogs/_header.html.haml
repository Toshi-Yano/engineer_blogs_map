%header
  .header__title
    = link_to "EngineerBlogs.map!",root_path, class: "header-open"
    = link_to root_path, class: "header-close" do
      = icon("fa", "home")
  .header__contents
    -if user_signed_in?
      = link_to "検索", search_show_blogs_path, class: "header__contents__items", data:{"turbolinks" => false}
      = link_to "共有", new_blog_path, class: "header__contents__items", data:{"turbolinks" => false}
      = link_to "マイページ", user_path(current_user), class: "header__contents__items"
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__contents__items"
    - else
      = link_to "検索", search_show_blogs_path, class: "header__contents__items", data:{"turbolinks" => false}
      = link_to "ログイン", new_user_session_path, class: "header__contents__items"
      = link_to "会員登録", new_user_registration_path, class: "header__contents__items"